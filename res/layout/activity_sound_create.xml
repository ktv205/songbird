<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59D1B6"
    android:orientation="vertical"
    tools:context=".controllers.SoundCreateActivity" >

    <!-- The White Keys -->
	<RelativeLayout 
	    android:id="@+id/keyLayout"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:onClick="onCNote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="@null"
        android:onClick="onDNote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:background="@null"
        android:onClick="onENote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton4"
        android:background="@null"
        android:onClick="onFNote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton6"
        android:background="@null"
        android:onClick="onGNote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton7"
        android:background="@null"
        android:onClick="onANote"
        android:src="@drawable/whitekey" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@+id/imageButton8"
        android:background="@null"
        android:onClick="onBNote"
        android:src="@drawable/whitekey" />

    <!-- The Sharps and Flats -->

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginLeft="-22dp"
        android:layout_toRightOf="@+id/imageButton2"
        android:background="@null"
        android:onClick="onDSharpNote"
        android:src="@drawable/blackkey" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-22dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:background="@null"
        android:onClick="onCSharpNote"
        android:scaleType="matrix"
        android:src="@drawable/blackkey" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-22dp"
        android:layout_toRightOf="@+id/imageButton6"
        android:background="@null"
        android:onClick="onFSharpNote"
        android:scaleType="matrix"
        android:src="@drawable/blackkey" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-22dp"
        android:layout_toRightOf="@+id/imageButton7"
        android:background="@null"
        android:onClick="onGSharpNote"
        android:scaleType="matrix"
        android:src="@drawable/blackkey" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginLeft="-22dp"
        android:layout_toRightOf="@+id/imageButton8"
        android:background="@null"
        android:onClick="onASharpNote"
        android:scaleType="matrix"
        android:src="@drawable/blackkey" />
		</RelativeLayout>
    <!-- Options -->

<!--     <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="15dp"
        android:background="#F3415C"
        android:onClick="onSaveMIDI"
        android:text="Save" /> -->

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView1"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="15dp"
        android:background="#F3415C"
        android:onClick="onPlayMIDI"
        android:text="Play/Save MIDI" 
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <!-- <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/button2"
        android:background="#F3415C"
        android:onClick="onChangeInstrument"
        android:text="Change Instrument" /> -->

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/button2"
        android:background="#F3415C"
        android:text="Change Track" 
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
    
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/button4"
        android:background="#F3415C"        
        android:onClick="onDeleteNote"
        android:text="Delete Note" 
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
    
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button5"
        android:background="#F3415C"        
        android:onClick="onLoadMIDI"
        android:text="Load" 
        android:textSize="14dp"/>

<!--     Textual Editor

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF" /> -->

    <!-- Visual Editor -->
	<ImageView
        android:id="@+id/imageView1"
        android:layout_width="238dp"
        android:layout_height="320dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="True"
        android:layout_marginLeft="15dp"
        android:src="@drawable/grand_staff_svg" />
	
	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="1000dp"
	    android:layout_height="180dp"
	    android:layout_marginTop = "69.5dp"
	    android:layout_alignTop="@+id/imageView1"
	    android:layout_alignParentRight="True"
	    android:src="@drawable/grand_staff_sans_clef" />
	
	<HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="200dp" 
            
	        android:layout_alignTop="@+id/imageView1"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="68dp"
	        android:background="#FFFFFF">
	    <LinearLayout
	        android:orientation="horizontal"
	        android:id="@+id/linearlayout"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:layout_alignTop="@+id/imageView1"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="0dp"
	        android:background="#FFFFFF"
	        android:focusable="false">
		
	    </LinearLayout>
	    
    
    </HorizontalScrollView>



</RelativeLayout>
<ListView
        android:id="@+id/left_drawer_create"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >
    </ListView>

</android.support.v4.widget.DrawerLayout>
